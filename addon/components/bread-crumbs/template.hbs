{{#each this.breadCrumbs.items as |item|}}
  {{#if (has-block)}}

    {{yield (hash
      component=(component (concat "bread-crumbs/" (if item.route "link" "text")) item=item)
      model=item
    )}}

  {{else}}

    {{#if item.route}}
      <BreadCrumbs::Link @item={{item}} />
    {{else}}
      <BreadCrumbs::Text @item={{item}} />
    {{/if}}

  {{/if}}

{{/each}}
