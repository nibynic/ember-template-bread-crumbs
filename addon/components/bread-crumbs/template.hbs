{{#each breadCrumbs.items as |item|}}
  {{#if hasBlock}}

    {{yield (hash
      component=(component (concat "bread-crumbs/" (if item.isLink "link" "text")) item=item)
      model=item
    )}}

  {{else}}

    {{#if item.isLink}}
      {{bread-crumbs/link item=item}}
    {{else}}
      {{bread-crumbs/text item=item}}
    {{/if}}

  {{/if}}

{{/each}}
