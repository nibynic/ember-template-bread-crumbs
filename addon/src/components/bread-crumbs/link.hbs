{{#if (or @item.models @item.model)}}
  <LinkTo
    @route={{@item.route}}
    @models={{or @item.models (array @item.model)}}
    @query={{if @item.query @item.query (hash)}}
    ...attributes
  >
    {{@item.text}}
  </LinkTo>
{{else}}
  <LinkTo
    @route={{@item.route}}
    @query={{if @item.query @item.query (hash)}}
    ...attributes
  >
    {{@item.text}}
  </LinkTo>
{{/if}}